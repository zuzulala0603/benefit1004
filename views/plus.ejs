            <input type="text" class="input__item__benefit" />
          </div>
        </div>
        <button class="input__plusBtn">추가</button>
        <button class="submitBtn">완료</button>
      </div>
    </section>
    <!-- !!! -->
    <section id="result">
      <div class="resultArea"></div>
    </section>
